{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile C with MSVC",
            "type": "shell",
            "command": "cl.exe",
            "args": [
                "/EHsc",                          // Tratamento de exceções C++
                "\"${file}\"",                    // Arquivo C atual sendo compilado
                "/Fe:${fileDirname}\\${fileBasenameNoExtension}.exe"  // Definição do nome do executável
            ],
            "group": {
                "kind": "build",
                "isDefault": true                  // Definir como tarefa padrão para compilação
            },
            "problemMatcher": ["$msCompile"],     // Matcher de problemas para MSVC
            "detail": "Compiling with MSVC"
        }
    ]
}
